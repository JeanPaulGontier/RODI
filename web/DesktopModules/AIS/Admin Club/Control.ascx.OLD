<%@ Control Language="C#" AutoEventWireup="true" CodeFile="Control.ascx.cs" Inherits="DesktopModules_AIS_Admin_Club_Control" %>
<%@ Register assembly="Telerik.Web.UI" namespace="Telerik.Web.UI" tagprefix="telerik" %>

<asp:Panel runat="server" ID="P1" >
<p><asp:Label runat="server"  Text="Nom : " /><asp:Label runat="server" ID="LBL_Nom" Text="Nom : " /></p>
<p><asp:Label ID="Label1" runat="server"  Text="Texte de présentation du club : " /></p>
<p><telerik:RadEditor runat="server" ID="TXT_Texte" ToolsFile="~/DesktopModules/AIS/Admin Club/XMLFile.xml" style="width:100%;" >                 
</telerik:RadEditor></p>
<p><asp:Label ID="Label2" runat="server"  Text="Réunions : " /></p>
<p><telerik:RadEditor runat="server" ID="TXT_Reunions" ToolsFile="~/DesktopModules/AIS/Admin Club/XMLFile.xml" style="width:100%;" >                 
</telerik:RadEditor></p>
<p><asp:Label ID="Label9" runat="server"  Text="URL du site web : " /><asp:TextBox runat="server" ID="TXT_Url" Width="400px" MaxLength="255"  /></p>
<asp:Panel runat="server" Visible="false">
<asp:Label ID="Label3" runat="server"  Text="Adresse 1 : " /><asp:TextBox runat="server" ID="TXT_Reunion_Adr1" Width="400px" MaxLength="255"  /><br />
<asp:Label ID="Label4" runat="server"  Text="Adresse 2 : " /><asp:TextBox runat="server" ID="TXT_Reunion_Adr2" Width="400px" MaxLength="255"  /><br />
<asp:Label ID="Label5" runat="server"  Text="CP : " /><asp:TextBox runat="server" ID="TXT_Reunion_CP" Width="400px" MaxLength="50"  /><br />
<asp:Label ID="Label6" runat="server"  Text="Ville : " /><asp:TextBox runat="server" ID="TXT_Reunion_Ville" Width="400px" MaxLength="255"  /><br />
<asp:Label ID="Label7" runat="server"  Text="Latitude : " /><telerik:RadNumericTextBox runat="server" ID="TXT_Latitude" Width="400px" MaxLength="20" NumberFormat-DecimalSeparator="." NumberFormat-DecimalDigits="10"  /><br />
<asp:Label ID="Label8" runat="server"  Text="Longitude : " /><telerik:RadNumericTextBox runat="server" ID="TXT_Longitude" Width="400px" MaxLength="20" NumberFormat-DecimalSeparator="." NumberFormat-DecimalDigits="10"  /><br />
</asp:Panel>
<asp:HiddenField ID="HF_Cric" runat="server" /><br />
<p><asp:Button ID="BT_Valider" runat="server"  Text="Valider" OnClientClick="javascript: return confirm('Valider les changements ?');" OnClick="BT_Valider_Click" /></p>
<script type="text/javascript">function AfficheValider() { obj = document.getElementById("<%=BT_Valider.ClientID%>").style; obj.visibility = 'visible'; }</script>
</asp:Panel>